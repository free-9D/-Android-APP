<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape_radius10_bg"
    android:elevation="10dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/avatar_ifv"
        app:round="24dp"
        android:scaleType="centerCrop"
        tools:src="@color/common_red"
        android:layout_width="48dp"
        android:layout_height="48dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            tools:text="用户账号1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/content_ll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/num_tv"
                tools:text="10"
                android:gravity="center"
                android:textColor="@color/common_white"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_radius360_red"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/content_tv"
                tools:text="11111"
                android:textColor="@color/common_title_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/add_ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ensure_btn"
            android:text="同意"
            android:textColor="@color/common_white"
            android:background="@drawable/shape_radius10_red"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/refuse_btn"
            android:text="拒绝"
            android:textColor="@color/common_white"
            android:background="@drawable/shape_radius10_primary"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
