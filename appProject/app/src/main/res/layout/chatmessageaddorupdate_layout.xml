<?xml version="1.0" encoding="utf-8"?>
<com.design.appproject.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/add_box_style"
    android:fillViewport="true">
    <com.design.appproject.widget.MyLinearLayout
        style="@style/add_form_style"
        android:orientation="vertical">
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/uid_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="用户id"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/uid_et"
            android:gravity="center_vertical"
            style="@style/add_item_input_style"
            android:hint="用户id"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/fid_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="好友id"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/fid_et"
            android:gravity="center_vertical"
            style="@style/add_item_input_style"
            android:hint="好友id"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/content_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="内容"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/content_et"
            android:gravity="center_vertical"
            style="@style/add_item_input_style"
            android:hint="内容"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/format_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="格式(1:文字，2:图片)"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/format_et"
            android:gravity="center_vertical"
            android:inputType="number"
            style="@style/add_item_input_style"
            android:hint="格式(1:文字，2:图片)"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:id="@+id/isRead_ll"
        style="@style/add_item_box_style">
        <com.design.appproject.widget.MyTextView
            android:text="消息已读(0:未读，1:已读)"
            style="@style/add_item_label_style"/>
        <com.design.appproject.widget.MyEditTextView
            android:id="@+id/isRead_et"
            android:gravity="center_vertical"
            android:inputType="number"
            style="@style/add_item_input_style"
            android:hint="消息已读(0:未读，1:已读)"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFrameLayout
            style="@style/add_btn_box_style">
        <com.design.appproject.widget.MyButton
            android:id="@+id/submit_btn"
            android:text="提交"
            android:gravity="center"
        style="@style/add_btn_submit_style"/>
    </com.design.appproject.widget.MyFrameLayout>
    </com.design.appproject.widget.MyLinearLayout>
</com.design.appproject.widget.MyScrollView>
