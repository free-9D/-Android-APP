<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/address_ll"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/common_selector_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="地址"
            android:textColor="@color/common_title_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_tv"
            tools:text="姓名 157*********\n详细地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:text="购买清单"
        android:padding="10dp"
        android:background="@drawable/common_selector_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/orders_list_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/common_selector_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/count_title_tv"
            android:text="总价"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/count_tv"
            android:text="￥0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/common_selector_line_bottom"
        android:layout_height="wrap_content">
        <TextView
            android:text="备注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/remark_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/my_logo_edit_style"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/ensure_btn"
        android:text="确认支付"
        android:layout_margin="10dp"
        android:textColor="@color/common_white"
        android:background="@drawable/shape_radius360_primary"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>