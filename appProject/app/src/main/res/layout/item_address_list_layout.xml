<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/default_tv"
        android:background="@drawable/shape_radius5_stroke_red"
        android:text="默认"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/address_tv"
        android:layout_margin="10dp"
        tools:text="我的地址"
        app:layout_constraintStart_toEndOf="@id/default_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name_phone_tv"
        tools:text="姓名 157*******"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/edit_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ps_ic_editor"
        android:background="@color/common_red"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@id/delete_tv"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <ImageButton
        android:id="@+id/delete_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ps_ic_delete"
        android:background="@color/common_red"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>