<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
        app:qmui_corner_radius="300dp"
        android:layout_gravity="center"
        android:background="@color/common_tip_orange"
        android:layout_width="300dp"
        android:layout_height="300dp"/>
    <com.design.appproject.widget.LotteryWheelView
        android:id="@+id/lottery_wheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>

    <Button
        android:background="@drawable/shape_radius360_red"
        android:id="@+id/btn_start"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="开始抽奖"
        android:layout_gravity="center"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>
</FrameLayout>