<?xml version="1.0" encoding="utf-8"?>
<com.design.appproject.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/add_box_style"
    android:fillViewport="true">
    <com.design.appproject.widget.MyLinearLayout
        style="@style/add_form_style"
        android:orientation="vertical">
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/add_item_editor_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="评论内容"
                style="@style/add_item_editor_label_style"/>
            <com.design.appproject.widget.MyFrameLayout
                style="@style/add_item_editor_editor_style">
                <jp.wasabeef.richeditor.RichEditor
                    android:id="@+id/content_et"
                    android:hint="评论内容"
                    android:minHeight="200dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/common_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>
                <ImageView
                    android:id="@+id/image_tv"
                    android:padding="@dimen/dp_10"
                    android:layout_gravity="end"
                    android:src="@mipmap/upload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            </com.design.appproject.widget.MyFrameLayout>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFrameLayout
            style="@style/add_btn_box_style">
        <com.design.appproject.widget.MyButton
            android:id="@+id/submit_btn"
            android:text="提交"
            android:gravity="center"
        style="@style/add_btn_submit_style"/>
    </com.design.appproject.widget.MyFrameLayout>
    </com.design.appproject.widget.MyLinearLayout>
</com.design.appproject.widget.MyScrollView>
