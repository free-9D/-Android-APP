<?xml version="1.0" encoding="utf-8"?>
<com.design.appproject.widget.MyFlexBoxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:flexWrap="wrap"
    style="@style/detail_box_style">
    <com.design.appproject.widget.MyFrameLayout
        style="@style/detail_swiper_box_style">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.design.appproject.widget.MyFrameLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        app:flexWrap="wrap"
        style="@style/detail_detail_box_style">
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/detail_detail_price_box_style">
            <com.design.appproject.widget.MyButton
                android:id="@+id/collection_ibtn"
                android:text="&#xe870;"
                style="@style/detail_detail_price_icon_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/detail_detail_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="标题："
                style="@style/detail_detail_item_label_style"/>
            <com.design.appproject.widget.MyTextView
                android:id="@+id/biaoti_tv"
                tools:text="标题："
                style="@style/detail_detail_item_text_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/detail_detail_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="商家账号："
                style="@style/detail_detail_item_label_style"/>
            <com.design.appproject.widget.MyTextView
                android:id="@+id/shangjiazhanghao_tv"
                tools:text="商家账号："
                style="@style/detail_detail_item_text_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/detail_detail_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="商家姓名："
                style="@style/detail_detail_item_label_style"/>
            <com.design.appproject.widget.MyTextView
                android:id="@+id/shangjiaxingming_tv"
                tools:text="商家姓名："
                style="@style/detail_detail_item_text_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            style="@style/detail_detail_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="发布时间："
                style="@style/detail_detail_item_label_style"/>
            <com.design.appproject.widget.MyTextView
                android:id="@+id/fabushijian_tv"
                android:layout_width="0dp"
                style="@style/detail_detail_item_text_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            style="@style/detail_detail_item_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="评论数："
                style="@style/detail_detail_item_label_style"/>
            <com.design.appproject.widget.MyTextView
                android:id="@+id/discussNumber_tv"
                android:layout_width="0dp"
                style="@style/detail_detail_item_text_style"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            android:id="@+id/zan_fbl"
            style="@style/detail_detail_zan_box_style">
            <com.design.appproject.widget.MyTextView
                android:id="@+id/zan_tv"
                android:text="赞："
                style="@style/detail_detail_zan_label_style"/>
            <com.design.appproject.widget.MyFlexBoxLayout
                style="@style/detail_detail_zan_content_box_style">
                <com.design.appproject.widget.MyTextView
                    android:id="@+id/zan_num_tv"
                    style="@style/detail_detail_zan_content_num_style"/>
                <com.design.appproject.widget.MyTextView
                    android:id="@+id/zan_icon_tv"
                    android:gravity="center"
                    android:text="&#xef83;"
                    style="@style/detail_detail_zan_content_icon_style"/>
            </com.design.appproject.widget.MyFlexBoxLayout>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            android:id="@+id/cai_fbl"
            style="@style/detail_detail_cai_box_style">
            <com.design.appproject.widget.MyTextView
                android:id="@+id/cai_tv"
                android:text="踩："
                style="@style/detail_detail_cai_label_style"/>
            <com.design.appproject.widget.MyFlexBoxLayout
                style="@style/detail_detail_cai_content_box_style">
                <com.design.appproject.widget.MyTextView
                    android:id="@+id/cai_num_tv"
                    style="@style/detail_detail_cai_content_num_style"/>
                <com.design.appproject.widget.MyTextView
                    android:id="@+id/cai_icon_tv"
                    android:gravity="center"
                    android:text="&#xef81;"
                    style="@style/detail_detail_cai_content_icon_style"/>
            </com.design.appproject.widget.MyFlexBoxLayout>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            android:id="@+id/video_fl"
            style="@style/detail_detail_video_box_style">
            <xyz.doikki.videoplayer.player.VideoView
                android:id="@+id/videoview"
                style="@style/detail_detail_video_video_style"
                android:layout_height="200dp"/>
        </com.design.appproject.widget.MyFlexBoxLayout>
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/detail_detail_textarea_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="简介"
                style="@style/detail_detail_textarea_label_style"/>
            <com.design.appproject.widget.MyFlexBoxLayout
                app:flexWrap="wrap"
                style="@style/detail_detail_textarea_text_style">
                <com.design.appproject.widget.CustomWebView
                    android:id="@+id/jianjie_cw"
                    tools:text="rich-text"
                    android:textColor="@color/common_title_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.design.appproject.widget.MyFlexBoxLayout>
        </com.design.appproject.widget.MyFlexBoxLayout>
    </com.design.appproject.widget.MyFlexBoxLayout>
    <com.design.appproject.widget.MyFlexBoxLayout
        android:orientation="vertical"
        style="@style/detail_detail_comment_box_style">
        <com.design.appproject.widget.MyFlexBoxLayout
            app:flexWrap="wrap"
            style="@style/detail_detail_comment_title_box_style">
            <com.design.appproject.widget.MyTextView
                android:text="评论"
                style="@style/detail_detail_comment_title_title_style"/>
            <com.design.appproject.widget.MyFlexBoxLayout
                app:flexWrap="wrap"
                style="@style/detail_detail_comment_title_add_box_style">
                <com.design.appproject.widget.MyTextView
                    android:id="@+id/add_comment_icon"
                    style="@style/detail_detail_comment_title_add_icon_style"/>
                <com.design.appproject.widget.MyTextView
                    android:id="@+id/add_comment_btn"
                    android:text="&#xe622;添加评论"
                    style="@style/detail_detail_comment_title_add_text_style"/>
            </com.design.appproject.widget.MyFlexBoxLayout>
        </com.design.appproject.widget.MyFlexBoxLayout>
    </com.design.appproject.widget.MyFlexBoxLayout>
</com.design.appproject.widget.MyFlexBoxLayout>