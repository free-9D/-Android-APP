<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/common_bg_color_gray"
    android:layout_height="match_parent">

    <com.design.appproject.widget.SmartRecyclerView
        android:id="@+id/cart_srv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/cart_bottom_ll"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/common_bg_color"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/all_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cart_count_tv"
            android:text="已选:(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cart_price_tv"
            android:text="￥0.00"
            android:textColor="@color/common_red"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <com.qmuiteam.qmui.layout.QMUIButton
            android:id="@+id/order_btn"
            android:text="立即下单"
            android:background="@color/common_red"
            android:layout_margin="10dp"
            android:textColor="@color/common_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.qmuiteam.qmui.layout.QMUILinearLayout>

</com.qmuiteam.qmui.layout.QMUILinearLayout>